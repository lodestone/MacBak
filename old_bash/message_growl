  tell application "GrowlHelperApp"
    -- Make a list of all notification types:
    set the allNotificationsList to ¬
      {"Notification 1", "Notification 2"}

    -- Make a list of the default enabled notifications:
    set the enabledNotificationsList to ¬
      {"Notification 1"}

    -- Register the script with Growl
    -- using either "icon of application"
    --  or "icon of file":
    register as application ¬
      "MacBak" all notifications allNotificationsList ¬
      default notifications enabledNotificationsList ¬
      icon of application "Script Editor"

    -- Send a notification:
    notify with name ¬
      "Notification 1" title ¬
      "MacBak" description ¬
      "Backups are done" ¬
      application name "MacBak"
  end tell
